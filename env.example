# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=retail_brain
POSTGRES_USER=retail_brain_user
POSTGRES_PASSWORD=your_secure_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Gateway
API_GATEWAY_PORT=3000
API_GATEWAY_API_KEYS=your_api_key_1,your_api_key_2

# Intent Service
INTENT_CACHE_TTL=60
INTENT_SHAP_SAMPLE_SIZE=2
INTENT_MONITORING_ENDPOINT=http://localhost:3010/v1/intent/monitor
INTENT_METRICS_NAMESPACE=intent_service

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Identity Engine
IDENTITY_AUTO_MERGE_THRESHOLD=0.80
IDENTITY_MANUAL_REVIEW_THRESHOLD=0.45

# Services
EVENT_COLLECTOR_PORT=3001
IDENTITY_ENGINE_PORT=3002
PROFILE_SERVICE_PORT=3003
RECOMMENDER_SERVICE_PORT=3004
ONBOARDING_SERVICE_PORT=3005
AI_ASSISTANT_SERVICE_PORT=3006

# Logging
LOG_LEVEL=info

# Node Environment
NODE_ENV=development

